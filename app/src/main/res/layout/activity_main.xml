<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lyber.MainActivity">

    <Button
        android:id="@+id/btCompare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compare"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="197dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="138dp" />

    <TextView
        android:id="@+id/tvUberEstimate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvLyftEstimate"
        android:layout_alignRight="@+id/tvLyftEstimate"
        android:layout_centerVertical="true"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="283dp" />

    <EditText
        android:id="@+id/etWhereTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvUberEstimate"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:ems="10"
        android:inputType="textPostalAddress"
        android:text="@string/where_to"
        android:hint="Where to?"
        />

    <EditText
        android:id="@+id/etPickUpAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:ems="10"
        android:inputType="textPostalAddress"
        android:text="@string/pick_up_at"
        android:hint="Pick up at"
        android:layout_above="@+id/editText"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use Current Location"
        android:layout_below="@+id/editText"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:layout_marginTop="12dp" />

</RelativeLayout>
