<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lyber.MainActivity">

    <Button
        android:id="@+id/btCompare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvUberEstimate"
        android:layout_alignRight="@+id/tvUberEstimate"
        android:layout_below="@+id/tvUberEstimate"
        android:layout_marginTop="99dp"
        android:text="Compare"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="197dp" />

    <TextView
        android:id="@+id/tvUberEstimate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/uber_fare"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="283dp"
        android:layout_marginTop="98dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="149dp"
        android:layout_marginStart="149dp" />

    <TextView
        android:id="@+id/tvLyftEstimate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvUberEstimate"
        android:layout_alignStart="@+id/tvUberEstimate"
        android:layout_below="@+id/tvUberEstimate"
        android:layout_marginTop="40dp"
        android:text="LyftFare" />

</RelativeLayout>
